{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:all": "env-cmd --no-override -f .env.test jest --runInBand --config ./test/jest-all.json",
    "test:spec": "concurrently \"firebase emulators:start --only functions\" \"env-cmd --no-override -f .env.test jest --testTimeout=100000 --runInBand\"",
    "test:e2e": "env-cmd --no-override -f .env.test jest --testTimeout=100000 --config ./test/jest-e2e.json",
    "test:cov": "env-cmd --no-override -f .env.test jest --config ./test/jest-all.json --testTimeout=100000 --coverage"
  },
  "engines": {
    "node": "16"
  },
  "main": "index.js",
  "dependencies": {
    "body-parser": "^1.20.0",
    "concurrently": "^7.1.0",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.18.1",
    "express-fileupload": "^1.3.1",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "jimp": "^0.16.1",
    "multer": "^1.4.4",
    "npm": "^8.9.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "child_process": "^1.0.2",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^28.0.3",
    "superagent": "^7.1.3",
    "supertest": "^6.2.3",
    "wait-port": "^0.2.9"
  },
  "private": true,
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.js$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
